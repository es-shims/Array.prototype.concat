{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"multiline-comment-style": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"ArraySpeciesCreate",
				"CreateDataPropertyOrThrow",
				"Get",
				"GetIntrinsic",
				"HasProperty",
				"IsConcatSpreadable",
				"LengthOfArrayLike",
				"RequireObjectCoercible",
				"Set",
				"ToObject",
				"ToString",
			]
		}],
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				// "max-len": 0,
				"max-lines-per-function": 0,
				// "no-invalid-this": 1,
				// "strict": 0,
			},
		},
	],
}
